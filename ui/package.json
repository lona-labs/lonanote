{
  "name": "lonanote",
  "version": "0.0.1",
  "description": "lonanote",
  "main": "./out/main/index.js",
  "author": "lona-labs",
  "homepage": "https://github.com/lona-labs/lonanote",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "pnpm run build:rust:node && electron-vite dev",
    "dev:web": "vite --force",
    "dev:android": "pnpm tauri:cmd android dev --open",
    "dev:ios": "pnpm tauri:cmd ios dev --open --host",
    "build": "pnpm run build:rust:node && pnpm run build:web",
    "build:web": "pnpm run typecheck && electron-vite build",
    "build:android": "pnpm tauri:cmd android build --open",
    "build:ios": "pnpm tauri:cmd ios build --open",
    "postinstall": "electron-builder install-app-deps && pnpm -C ../rust/node install",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:linux": "pnpm run build && electron-builder --linux",
    "build:rust:node": "pnpm -C ../rust/node build",
    "tauri:cmd": "env-cmd -f scripts/env/tauri.env -- tauri"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.5.0",
    "lonanote-core-node": "link:../rust/node"
  },
  "devDependencies": {
    "@chakra-ui/react": "^3.8.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@emotion/react": "^11.14.0",
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/cli": "^2.2.7",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.13.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "allotment": "^1.20.3",
    "chroma-js": "^3.1.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.6",
    "electron-builder-squirrel-windows": "^26.0.6",
    "electron-vite": "^2.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "next-themes": "^0.4.4",
    "prettier": "^3.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-router": "^7.1.5",
    "sass-embedded": "^1.83.4",
    "ts-deepmerge": "^7.0.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vconsole": "^3.15.1",
    "vite": "^6.1.0",
    "vite-plugin-vconsole": "^2.1.1",
    "walkdir": "^0.4.1",
    "zustand": "^5.0.3"
  },
  "packageManager": "pnpm@9.15.0",
  "node": ">=20.0.0"
}
